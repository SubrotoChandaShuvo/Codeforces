#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
    for(int i=0; i<t; i++)
    {
        string a;
        cin>>a;
        int c=0;
        int s=a.size();
        for(int i=1; i<a.size()-1; i++)
        {
            c=c+1;
        }
        if(s>10)
        cout<<a[0]<<c<<a[s-1]<<endl;
        else
            cout<<a<<endl;
    }
}
